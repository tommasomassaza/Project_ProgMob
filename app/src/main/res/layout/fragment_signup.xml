<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund_1"
    tools:context=".view.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/signuptxt"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="30dp"
        android:gravity="center" />

    <EditText
        android:id="@+id/namesignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signuptxt"
        android:hint="Name"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#50ffffff"
        android:textColor="@color/black"
        android:textColorHint="#403737"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"/>
    <EditText
        android:id="@+id/surnamesignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namesignup"
        android:hint="Surname"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#50ffffff"
        android:textColor="@color/black"
        android:textColorHint="#403737"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/emailsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surnamesignup"
        android:hint="Enter email address"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#50ffffff"
        android:textColor="@color/black"
        android:textColorHint="#403737"
        android:drawableLeft="@drawable/baseline_alternate_email_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailsignup"
        android:hint="Password"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#50ffffff"
        android:textColor="@color/black"
        android:textColorHint="#403737"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#50ffffff"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="20dp"
        android:hint="Check password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="#403737" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:textColor="@color/black"
        app:backgroundTint="#DCB6AB" />


</LinearLayout>